<div class="container-2">
  <form action="/posts/new">
    <input class="button" type="submit" value="New Post" />
</div>

<div>
  {{#each posts}}
  <div class="container-4">
    <div class="card-2">
      <li>
        <img class="avatar" src="{{this.profilePictureURL}}">
        <p class="name">{{this.firstName}} {{this.lastName}}</p>
      </li>

      <span>{{this.message}}</span>

      <li>
        <form method="post" action="/posts/like">
          <input type="hidden" name="post" value="{{this._id}}">
          <input type="submit" value="ðŸ‘ {{this.likes.length}}">
        </form>
        <a class="edit">Posted on: {{this.createdAt}}</a>
      </li>
    </div>
  </div>
  {{/each}}
</div>

